<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="193dp"
        android:layout_height="69dp"
        android:fontFamily="sans-serif-black"
        android:text="MobiTail"
        android:textSize="45dp"
        android:textStyle="italic"
        android:layout_marginTop="70dp"
        android:layout_toRightOf="@id/Mobitail_Icon"/>

    <ImageView
        android:id="@+id/Mobitail_Icon"
        android:layout_width="127dp"
        android:layout_height="119dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/mobitail" />

    <TextView
        android:id="@+id/welcomeTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="142dp"
        android:fontFamily="sans-serif"
        android:padding="16dp"
        android:text="Discover Amazing Offers on Your Goods in Just One Place"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="50sp"
        android:textStyle="bold" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/welcomebtn"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:backgroundTint="@color/black"
        android:text="Let's Go..."
        app:cornerRadius="10dp" />

</RelativeLayout>