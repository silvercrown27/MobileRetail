<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Consumer.mainActivities.ProfileActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/toolbar_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <com.google.android.material.appbar.MaterialToolbar
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@android:color/transparent"
                android:gravity="top">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textSize="24dp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/Setting_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:layout_marginHorizontal="10dp"
                    android:src="@drawable/settings"
                    android:scaleType="centerCrop"
                    android:background="@android:color/transparent" />

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:src="@drawable/notification" />

            </com.google.android.material.appbar.MaterialToolbar>
        </RelativeLayout>

        <ScrollView
            android:id="@+id/Profile_recycleview"
            android:layout_width="match_parent"
            android:layout_height="620dp"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/edit_profile_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Edit Profile"
                            android:textStyle="normal"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/User_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="John Doe"
                            android:textSize="35dp"
                            android:textStyle="bold"
                            android:layout_marginTop="20dp" />

                        <TextView
                            android:id="@+id/location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nairobi"
                            android:textStyle="normal"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/User_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:text="abcuser@gmail.com"
                            android:textSize="20dp" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="155dp"
                        android:layout_height="match_parent"
                        android:gravity="right">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/Profile_picture"
                            android:layout_width="155dp"
                            android:layout_height="155dp"
                            android:background="@android:color/transparent"
                            android:src="@drawable/profile"
                            app:civ_border_color="@android:color/transparent"
                            app:civ_border_overlay="false"
                            app:civ_border_width="0dp" />

                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginVertical="15dp"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_border">

                    <ImageView
                        android:id="@+id/MyWallet_btn_leftIcon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/wallets" />

                    <TextView
                        android:id="@+id/MyWallet_btn_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="17dp"
                        android:layout_marginLeft="15dp"
                        android:layout_toStartOf="@id/MyWallet_btn_rightIcon"
                        android:layout_toEndOf="@id/MyWallet_btn_leftIcon"
                        android:text="My Balances"
                        android:textSize="24sp" />

                    <ImageView
                        android:id="@+id/MyWallet_btn_rightIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/next" />

                    <Button
                        android:id="@+id/MyWallet_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:textColor="@color/light_blue" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginVertical="15dp"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_border">

                    <ImageView
                        android:id="@+id/MyPurchases_btn_leftIcon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/purchases" />

                    <TextView
                        android:id="@+id/MyPurchases_btn_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="17dp"
                        android:layout_marginLeft="15dp"
                        android:layout_toStartOf="@id/MyPurchases_btn_rightIcon"
                        android:layout_toEndOf="@id/MyPurchases_btn_leftIcon"
                        android:text="My Purchases"
                        android:textSize="24sp" />

                    <ImageView
                        android:id="@+id/MyPurchases_btn_rightIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/next" />

                    <Button
                        android:id="@+id/MyPurchases_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:textColor="@color/light_blue" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="5dp"
                    android:layout_marginVertical="15dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_border">

                    <ImageView
                        android:id="@+id/Messages_btn_leftIcon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/messages" />

                    <TextView
                        android:id="@+id/Messages_btn_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="17dp"
                        android:layout_marginLeft="15dp"
                        android:layout_toStartOf="@id/Messages_btn_rightIcon"
                        android:layout_toEndOf="@id/Messages_btn_leftIcon"
                        android:text="Messages"
                        android:textSize="24sp" />

                    <ImageView
                        android:id="@+id/Messages_btn_rightIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/next" />

                    <Button
                        android:id="@+id/Messages_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:textColor="@color/light_blue" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginVertical="15dp"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_border">

                    <ImageView
                        android:id="@+id/MyAddresses_btn_leftIcon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/address" />

                    <TextView
                        android:id="@+id/MyAddresses_btn_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="17dp"
                        android:layout_marginLeft="15dp"
                        android:layout_toStartOf="@id/MyAddresses_btn_rightIcon"
                        android:layout_toEndOf="@id/MyAddresses_btn_leftIcon"
                        android:text="Addresses"
                        android:textSize="24sp" />

                    <ImageView
                        android:id="@+id/MyAddresses_btn_rightIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/next" />

                    <Button
                        android:id="@+id/MyAddresses_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:textColor="@color/light_blue" />

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:focusable="false"
            android:verticalScrollbarPosition="defaultPosition"
            android:background="@drawable/bottom_nav_card_background"
            android:elevation="15dp"
            android:layout_alignParentBottom="true"
            app:itemIconTint="@color/black"
            app:itemTextColor="@color/black"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/bottom_navigation_menu">

        </com.google.android.material.bottomnavigation.BottomNavigationView>

    </RelativeLayout>
</RelativeLayout>